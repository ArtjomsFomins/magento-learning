/**
 * @var \Magento\Catalog\Block\Product\View $block
 * @var \Magento\Framework\Escaper $escaper */
?>
<?php $_product = $block->getProduct(); ?>
<?php $buttonTitle = __('Add to Cart'); ?>
<?php if ($_product->isSaleable()):?>
<div class="box-tocart" data-bind="scope:'qty-counter'" >
    <div class="fieldset">
        <?php if ($block->shouldRenderQuantity()):?>
        <div class="field qty" id="product_addtocart_form"  >
            <div class="control counter">
                <div
                    tabindex="0"
                    class="counter__changer counter__changer-minus"
                    data-bind="click: decrement, event: {keypress: decrement}"
                >
                    <span></span>
                </div>
                <input type="number"
                       name="qty"
                       id="qty"
                       value="<?= $block->getProductDefaultQty() * 1 ?>"
                       title="<?= $block->escapeHtmlAttr(__('Qty')) ?>"
                       class="input-text qty counter__input"
                       data-validate="<?= $block->escapeHtml(json_encode($block->getQuantityValidators())) ?>"
                       data-bind="textInput: counterValue"
                       pattern="^[-/d]/d*$"

                       />
                <div tabindex="0"
                    class="counter__changer counter__changer-plus"
                    data-bind="click: increment, event: {keypress: increment}"
                >
                    <span>+</span>
                </div>
            </div>
            <?php if ($_product->isInStock()): ?>
            <div class="stock">
                <img class="stock__image"
                    src="<?= $escaper->escapeUrl($block->getViewFileUrl('Magento_Catalog::images/check-mark.svg'))?>"
                    alt="check mark"
                />
                <p class="stock__text">  in stock</p>
                <span class="stock__qty">
                    <?= $escaper->escapeHtml($_product->getExtensionAttributes()->getStockItem()->getQty()) ?>
                    items available
                </span>
            </div>
            <?php endif; ?>
        </div>
        <?php endif; ?>
        <div class="actions">
            <button type="submit"
                    title="<?= $block->escapeHtmlAttr($buttonTitle) ?>"
                    class="action primary tocart cart__btn"
                    id="product-addtocart-button">
                <span><?= $block->escapeHtml($buttonTitle) ?></span>
            </button>
            <?= $block->getChildHtml('', true) ?>
        </div>
    </div>
</div>
<?php endif; ?>
<script type="text/x-magento-init">
    {
        "#product_addtocart_form": {
        "Magento_Ui/js/core/app": {
            "components": {
                "qty-counter": {
                    "component": "qty-counter",
                    "config": {
                        "counterValue": "1"
                    }
                }
            }
        }
        }
    }
</script>
